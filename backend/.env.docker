# Docker Environment Configuration
# Copy this to .env when using docker-compose

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (Docker)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/scraper_db

# Redis Configuration (Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
# Get your API key from: https://makersuite.google.com/app/apikey
# Available models: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash

# Scraper Configuration
MAX_CONTENT_LENGTH=50000
# Maximum characters to extract from scraped websites (default: 50000)

USE_PLAYWRIGHT=true
# Docker has Chromium installed, so Playwright works


