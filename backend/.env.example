# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/scraper_db

# Redis Configuration (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
# Get your API key from: https://makersuite.google.com/app/apikey
# Available models: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash

# Scraper Configuration
MAX_CONTENT_LENGTH=50000
# Maximum characters to extract from scraped websites (default: 50000)

USE_PLAYWRIGHT=false
# Set to 'true' to use Playwright (requires browser installation)
# Set to 'false' to use HTTP scraper with axios + cheerio (recommended for production)


